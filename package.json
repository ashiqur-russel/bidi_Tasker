{
  "name": "tasker",
  "version": "1.0.0",
  "description": "Full-stack task management application with NestJS backend and Angular frontend",
  "private": true,
  "workspaces": [
    "bidi-api",
    "bidi-client",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "cd bidi-api && npm run start:dev",
    "dev:client": "cd bidi-client && npm start",
    "build": "npm run build:shared && npm run build:api && npm run build:client",
    "build:shared": "cd shared && npm run build",
    "build:api": "cd bidi-api && npm run build",
    "build:client": "cd bidi-client && npm run build:production",
    "build:staging": "cd bidi-client && npm run build:staging",
    "install:all": "npm install && cd shared && npm install && cd ../bidi-api && npm install && cd ../bidi-client && npm install",
    "clean": "npm run clean:shared && npm run clean:api && npm run clean:client",
    "clean:shared": "cd shared && npm run clean",
    "clean:api": "cd bidi-api && rm -rf dist node_modules",
    "clean:client": "cd bidi-client && rm -rf dist node_modules",
    "test": "npm run test:api && npm run test:client",
    "test:api": "cd bidi-api && npm test",
    "test:client": "cd bidi-client && npm test",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "setup": "./scripts/development/dev-setup.sh",
    "env:setup": "cd bidi-client && npm run env:setup",
    "env:check": "cd bidi-client && npm run env:check",
    "generate-docs": "cd bidi-api && npm run build && node scripts/generate-swagger.js",
    "serve-docs": "node tools/dev-tools/serve-docs.js",
    "docs": "npm run generate-docs && npm run serve-docs",
    "update-docs": "./scripts/development/update-docs.sh",
    "view-api": "./scripts/development/view-api.sh",
    "mock-api": "node tools/dev-tools/mock-api-server.js",
    "dev:mock": "concurrently \"npm run mock-api\" \"npm run serve-docs\"",
    "start-mock": "./scripts/development/start-mock-dev.sh",
    "test-mock": "./scripts/development/test-mock-api.sh",
    "api": "./tools/scripts/api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "task-management",
    "nestjs",
    "angular",
    "mongodb",
    "typescript",
    "fullstack"
  ],
  "author": "Tasker Team",
  "license": "MIT"
}