# Development Environment Variables for API
# Copy this file to .env and update values as needed

# MongoDB Configuration
MONGODB_URI=mongodb://${MONGO_ROOT_USERNAME:-admin}:${MONGO_ROOT_PASSWORD:-1234}@localhost:27017/${MONGO_DATABASE:-bidi_todo}?authSource=admin
MONGODB_DATABASE=${MONGO_DATABASE:-bidi_todo}

# Application Configuration
PORT=${API_PORT:-3000}
NODE_ENV=development

# JWT Configuration (for development)
JWT_SECRET=${JWT_SECRET:-dev_jwt_secret_key_change_in_production}
JWT_EXPIRES_IN=${JWT_EXPIRES_IN:-24h}

# CORS Configuration
CORS_ORIGIN=${CORS_ORIGIN:-http://localhost:4200}

# Rate Limiting (development - more lenient)
RATE_LIMIT_TTL=${RATE_LIMIT_TTL:-60}
RATE_LIMIT_LIMIT=${RATE_LIMIT_LIMIT:-1000}

# Logging
LOG_LEVEL=${LOG_LEVEL:-debug}
LOG_FORMAT=${LOG_FORMAT:-json}
